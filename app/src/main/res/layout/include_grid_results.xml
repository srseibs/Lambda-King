<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end"
    android:stretchColumns="0,1,2">

    <TableRow>
        <TextView
            style="@style/ResultTableRowTitle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Delay"
            />

        <TextView
            android:id="@+id/result_delay"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            android:layout_span="2"
            tools:text="445.2 ns"
            />
    </TableRow>

    <View style="@style/ResultTableHorizontalLine"/>
    <TableRow>
        <TextView
            style="@style/ResultTableRowTitle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Electrical Length"
            />

        <TextView
            android:id="@+id/result_elen"
            style="@style/ResultTableResults"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="1.54 Lambda"
            />
    </TableRow>
    <View style="@style/ResultTableHorizontalLine"/>
    <TableRow>
        <TextView
            style="@style/ResultTableRowTitle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Speed"
            />

        <TextView
            android:id="@+id/result_speed_s_m"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            android:layout_column="1"
            tools:text="1.3 us/m"
            />

        <TextView
            android:id="@+id/result_speed_s_in"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="0.24 ns/mile"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/result_speed_m_s"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            android:layout_column="1"
            tools:text="300.12 Mm/s"
            />

        <TextView
            android:id="@+id/result_speed_mi_s"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="94231 mi/s"
            />
    </TableRow>
    <View style="@style/ResultTableHorizontalLine"/>

    <TableRow>
        <TextView
            style="@style/ResultTableRowTitle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Wavelength"
            />

        <TextView
            android:id="@+id/result_lambda_m"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="12.4 Î»"
            />

        <TextView
            android:id="@+id/result_lambda_ft"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="37.345 ft"
            />
    </TableRow>
    <View style="@style/ResultTableHorizontalLine"/>

    <TableRow>
        <TextView
            style="@style/ResultTableRowTitle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Wavelength / 2"
            />

        <TextView
            android:id="@+id/result_lambda_2_m"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="6.2 m"
            />

        <TextView
            android:id="@+id/result_lambda_2_ft"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="15.345 ft"
            />
    </TableRow>
    <View style="@style/ResultTableHorizontalLine"/>

    <TableRow>
        <TextView
            style="@style/ResultTableRowTitle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Wavelength / 4"
            />

        <TextView
            android:id="@+id/result_lambda_4_m"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="1.3 m"
            />

        <TextView
            android:id="@+id/result_lambda_4_ft"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="3.12 ft"
            />
    </TableRow>
    <View style="@style/ResultTableHorizontalLine"/>

    <TableRow>
        <TextView
            style="@style/ResultTableRowTitle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Phase Slopes"
            />

        <TextView
            android:id="@+id/result_slope_m_deg"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            android:layout_column="1"
            tools:text="1.3 m/deg"
            />

        <TextView
            android:id="@+id/result_slope_ft_deg"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            android:layout_column="1"
            tools:text="0.24 in/deg"
            />
    </TableRow>

    <TableRow>
        <View
            style="@style/ResultTableHorizontalLine"
            android:layout_column="1"
            android:layout_span="2"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/result_slope_deg_m"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            android:layout_column="1"
            tools:text="1.3 deg/mm"
            />

        <TextView
            android:id="@+id/result_slope_deg_ft"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="0.24 deg/in"
            />
    </TableRow>

    <TableRow>
        <View
            style="@style/ResultTableHorizontalLine"
            android:layout_column="1"
            android:layout_span="2"/>
    </TableRow>


    <TableRow>
        <TextView
            android:id="@+id/result_slope_deg_hz"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            android:layout_column="1"
            tools:text="1.3 deg/MHz"
            />

        <TextView
            android:id="@+id/result_slope_hz_deg"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            tools:text="0.24 MHz/deg"
            />
    </TableRow>
    <View style="@style/ResultTableHorizontalLine"/>

    <TableRow>
        <TextView
            style="@style/ResultTableRowTitle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="VSWR Ripple"
            />

        <TextView
            android:id="@+id/result_vswr_ripple"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_span="2"
            tools:text="25.12 MHz spacing"
            />
    </TableRow>

    <View style="@style/ResultTableHorizontalLine"/>

    <TableRow>
        <TextView
            style="@style/ResultTableRowTitle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Phase Shift"
            />

        <TextView
            android:id="@+id/result_phase_shift_deg"
            style="@style/ResultTableResults"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_span="2"
            tools:text="124.23 deg"
            />
    </TableRow>
    <View style="@style/ResultTableHorizontalLine"/>

</TableLayout>