<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--workaround for failed to find style 'cardView Style' in current theme  -->
        <item name="cardViewStyle">@style/CardView</item>

    </style>

    <style name="MyEntryButtons">
        <item name="android:padding">4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/shape_button_rounded_white_border</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyAppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyPopupTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="ItemTextAppearance">
        <!--<item name="android:textStyle">normal</item>-->
    </style>

    <style name="ResultTableRowTitle" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResultTableResults" parent="AppTheme">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ResultTableHorizontalLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ValueTextLabels">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textEnd</item>

    </style>

</resources>
